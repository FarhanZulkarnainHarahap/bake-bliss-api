generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  product Product[] @relation("UserProduct")
  reviews Review[] // ✅ user punya banyak review
  orders  Order[] // ✅ tambah ini
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Int
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authorId String?
  author   User?   @relation("UserProduct", fields: [authorId], references: [id])

  productImages ProductImage[]
  reviews       Review[]
  orderItems    OrderItem[] // ✅ tambah ini
}

model Review {
  id        String @id @default(uuid())
  productId String

  name    String // ✅ nama input manual (tanpa User)
  message String
  rating  Int? // opsional (1-5)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?

  @@index([productId])
}

model ProductImage {
  id             String    @id @default(uuid())
  productId      String
  imagePreviewId String
  imageContentId String
  createdAt      DateTime  @default(now())
  deleteAt       DateTime?
  updatedAt      DateTime  @updatedAt

  product      Product @relation(fields: [productId], references: [id])
  ImagePreview Image   @relation("ImagePreview", fields: [imagePreviewId], references: [id])
  ImageContent Image   @relation("ImageContent", fields: [imageContentId], references: [id])
}

model Image {
  id        String   @id @default(uuid())
  url       String
  createdAt DateTime @default(now())

  ImagePreview ProductImage[] @relation("ImagePreview")
  ImageContent ProductImage[] @relation("ImageContent")
}

model HomeReview {
  id          String   @id @default(uuid())
  name        String
  text        String
  rating      Int? // optional (kalau mau bintang)
  isPublished Boolean  @default(true)
  order       Int      @default(0) // buat urutan tampil (kiri → kanan)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isPublished, order])
}

enum Role {
  ADMIN
  USER
}

model Order {
  id        String  @id @default(uuid())
  orderCode String  @unique // kode order internal (mis: BB-20251216-0001)
  userId    String?
  user      User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  status      OrderStatus @default(PENDING)
  totalAmount Int // total harga (rupiah)
  currency    String      @default("IDR")

  // data customer (kalau guest checkout / snapshot)
  customerName  String?
  customerEmail String?
  customerPhone String?

  // items
  items   OrderItem[]
  payment PaymentTransaction?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String

  name     String // snapshot nama product saat checkout
  price    Int // snapshot harga saat checkout
  qty      Int
  subtotal Int // price * qty

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model PaymentTransaction {
  id      String @id @default(uuid())
  orderId String @unique
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  provider PaymentProvider @default(MIDTRANS)

  // Midtrans identifiers
  midtransOrderId String? @unique // biasanya sama dengan orderCode (kalau kamu pakai itu sebagai order_id Midtrans)
  transactionId   String? @unique // midtrans transaction_id
  paymentType     String? // credit_card, gopay, bank_transfer, dll

  // Snap
  snapToken   String?
  redirectUrl String?

  // Status Midtrans
  transactionStatus String? // pending, settlement, deny, cancel, expire, refund, chargeback, etc
  fraudStatus       String? // accept/deny/challenge

  // Amount snapshot
  grossAmount Int?
  currency    String? @default("IDR")

  // Raw payload untuk audit/debug
  requestPayload      Json?
  responsePayload     Json?
  notificationPayload Json?

  status PaymentStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([provider])
  @@index([status])
  @@index([transactionStatus])
}

enum OrderStatus {
  PENDING // order dibuat, belum bayar
  PAID // sudah dibayar (settlement/capture)
  PROCESSING // diproses (opsional)
  SHIPPED // dikirim (opsional)
  COMPLETED // selesai (opsional)
  CANCELLED // dibatalkan
  EXPIRED // expired
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
  CANCELLED
  REFUNDED
}

enum PaymentProvider {
  MIDTRANS
}
