generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi
  product Product[] @relation("UserProduct")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Int
  image       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke user (siapa yang menambahkan)
  authorId String?
  author   User?   @relation("UserProduct", fields: [authorId], references: [id])
}

enum Role {
  ADMIN
  USER
}
